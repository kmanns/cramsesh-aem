
--- 
import { Home, BookOpen, Brain, FileText } from 'lucide-react';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/seshlogo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gray-100 font-sans">
		<div class="flex">
			<aside class="w-96 bg-white shadow-md h-screen sticky top-0">
				<div class="p-9">
					<a href="/" class="flex items-center space-x-3">
						<img src="/seshlogo.png" alt="Cram Sesh Logo" class="h-12 w-12">
						<span class="text-4xl font-bold">Cram Sesh</span>
					</a>
				</div>
				<nav class="mt-9">
					<a href="/" class="flex items-center px-9 py-5 text-gray-700 hover:bg-gray-200">
						<Home class="w-8 h-8" />
						<span class="ml-5 text-2xl">Home</span>
					</a>
					<a href="/education" class="flex items-center px-9 py-5 text-gray-700 hover:bg-gray-200">
						<BookOpen class="w-8 h-8" />
						<span class="ml-5 text-2xl">Education</span>
					</a>
					<a href="/architecture" class="flex items-center px-9 py-5 text-gray-700 hover:bg-gray-200">
						<BookOpen class="w-8 h-8" />
						<span class="ml-5 text-2xl">Architecture</span>
					</a>
					<a href="/business" class="flex items-center px-9 py-5 text-gray-700 hover:bg-gray-200">
						<BookOpen class="w-8 h-8" />
						<span class="ml-5 text-2xl">Business Analysis</span>
					</a>
					<a href="/implementation" class="flex items-center px-9 py-5 text-gray-700 hover:bg-gray-200">
						<BookOpen class="w-8 h-8" />
						<span class="ml-5 text-2xl">Implementation</span>
					</a>
					<a href="/practice" class="flex items-center px-9 py-5 text-gray-700 hover:bg-gray-200">
						<Brain class="w-8 h-8" />
						<span class="ml-5 text-2xl">Practice Test</span>
					</a>
					<a href="/resources" class="flex items-center px-9 py-5 text-gray-700 hover:bg-gray-200">
						<FileText class="w-8 h-8" />
						<span class="ml-5 text-2xl">Resources</span>
					</a>
				</nav>
			</aside>
			<main class="flex-1 p-8">
				<slot />
			</main>
		</div>
	</body>
</html>
